<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        tools:context=".ui.quotes.MainActivity" android:layout_height="match_parent">

    <TextView
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="16sp" android:id="@+id/textView_quotes"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_quote" app:layout_constraintVertical_bias="0.51"
            app:layout_constraintHorizontal_bias="0.0" android:layout_margin="10dp" android:minHeight="250dp"
            android:padding="20dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_quote"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:hint="@string/quote_prompt"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/editText_author"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_author"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:hint="@string/author_prompt" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/button_submit_quote"/>
    <Button
            android:text="@string/submit_button_prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_submit_quote"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="24sp"
            android:background="@android:color/transparent" android:textColor="@android:color/holo_blue_light"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="80dp"
            android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>